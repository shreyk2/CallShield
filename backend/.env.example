# Application Settings
APP_NAME=CallShield
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS Origins (JSON array format for pydantic)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Audio Settings
SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=16000

# Speaker Verification
EMBEDDING_MODEL=speechbrain/spkrec-ecapa-voxceleb
MATCH_THRESHOLD=0.8

# Deepfake Detection - Undetectable.AI (backup)
FAKE_THRESHOLD=0.2
UNDETECTABLE_API_URL=https://ai-audio-detect.undetectable.ai
UNDETECTABLE_API_KEY=your_undetectable_api_key_here
UNDETECTABLE_USER_ID=your_undetectable_user_id_here

# Deepfake Detection - Aurigin.AI (active)
AURIGIN_API_URL=https://aurigin.ai/api-ext
AURIGIN_API_KEY=your_aurigin_api_key_here

# Auth Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Session Management
MAX_SESSIONS=100
SESSION_TIMEOUT_SECONDS=300

# Data Paths
DATA_DIR=../data
ENROLLMENTS_DIR=../data/enrollments
EMBEDDINGS_DIR=../data/embeddings
