# Application Settings
APP_NAME=CallShield
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS Origins (JSON array format for pydantic)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Audio Settings
SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=16000

# Speaker Verification
EMBEDDING_MODEL=speechbrain/spkrec-ecapa-voxceleb
MATCH_THRESHOLD=0.8

# Deepfake Detection - Undetectable.AI
FAKE_THRESHOLD=0.2
DEEPFAKE_API_URL=https://ai-audio-detect.undetectable.ai
DEEPFAKE_API_KEY=your-api-key-here
DEEPFAKE_USER_ID=your-user-id-here

# Session Management
MAX_SESSIONS=100
SESSION_TIMEOUT_SECONDS=300

# Data Paths
DATA_DIR=../data
ENROLLMENTS_DIR=../data/enrollments
EMBEDDINGS_DIR=../data/embeddings
